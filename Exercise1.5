const App = () => {
    const course = 'Half Stack application development'
    const parts = [
      {
        name: 'Fundamentals of React',
        exercises: 10
      },
      {
        name: 'Using props to pass data',
        exercises: 7
      },
      {
        name: 'State of a component',
        exercises: 14
      }
    ]

  
  const Header = () => {
    return (
        <p>
        Hello, the name of this course is {course}!
        </p>
    )
  }

  let sum = 0;

  const Content = () => {
    return (
      <div>
        <p>
        The name of the first part is {parts[0].name} and there are {parts[0].exercises} exercises in it!
        </p>
        <p>
        The name of the second part is {parts[1].name} and there are {parts[1].exercises} exercises in it!
        </p>
        <p>
        The name of the last exercise is {parts[2].name} and there are {parts[2].exercises} exercises in it!
        </p>
      </div>
    )
  }

  const Total = () => {
    return (
      <p>{parts[0].exercises} + {parts[1].exercises} + {parts[2].exercises}</p>
    )
  } 

  return (
    <div>
      <Header course={course}/>
      <Content parts={parts}/>
      <Total parts={parts}/>
      </div>
  )
}

export default App

